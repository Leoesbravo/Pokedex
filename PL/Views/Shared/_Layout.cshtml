<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PL.styles.css" asp-append-version="true" />
</head>
<body>
    <style>
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5); /* Fondo semiopaco */
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999; /* Z-index alto para que esté por encima de otros elementos */
            backdrop-filter: blur(5px); /* Aplica un filtro de desenfoque al fondo */
            -webkit-backdrop-filter: blur(5px); /* Para navegadores basados en Webkit como Safari */
        }

        .loading-content {
            text-align: center;
            background: transparent; /* Fondo transparente en lugar de blanco */
            border-radius: 10px;
            padding: 0; /* Elimina el espacio interno */
            display: flex; /* Hacer que los elementos se centren verticalmente */
            flex-direction: column; /* Apilar elementos verticalmente */
            align-items: center; /* Centrar elementos horizontalmente */
        }

            .loading-content img {
                max-width: 100px; /* Tamaño máximo de la imagen */
                margin-bottom: 10px; /* Espacio entre la imagen y el spinner */
            }

        .spinner-border {
            display: block; /* Hacer que el spinner sea un elemento de bloque */
            margin-top: 10px; /* Espacio entre la imagen y el spinner */
        }

        #loading-text {
            font-size: 24px;
            font-weight: bold;
            margin-top: 10px; /* Espacio entre la imagen y el texto */
            color: yellow; /* Cambiar el color del texto a amarillo */
            text-shadow: 2px 2px 4px blue; /* Agregar una sombra azul a cada letra */
        }

    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-danger border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/98/International_Pok%C3%A9mon_logo.svg/1200px-International_Pok%C3%A9mon_logo.svg.png" width="120" height="45" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @*<a class="nav-link text-dark" asp-area="" asp-controller="Pokedex" asp-action="GetAll" onclick="Cargar()">Todos</a>*@
                            <button id="myButton"></button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Modal de carga -->
    <div class="overlay" id="overlay" style="display:none">
        <div class="loading-content">
            <img src="https://64.media.tumblr.com/91a2b16f6d68cb4fa0ea89d82477fb20/11a93665ce417e1c-c8/s1280x1920/dd778603ab36e840576640f1641c93dc9d79ab25.gif" alt="Cargando..." />
            <div id="loading-text"></div>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - PL - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
<script>
    $(document).ready(function () {
        // Identificador del botón
        var buttonId = "#myButton";

        // Controlador de eventos para el clic del botón
        $(buttonId).click(function () {
            // Mostrar la pantalla de carga
            $("#overlay").show();

            // Texto que deseas mostrar y animar
            var loadingText = "Cargando...";
            var loadingElement = document.getElementById("loading-text");

            function animateLoadingText() {
                var index = 0;
                var animationInterval = setInterval(function () {
                    loadingElement.textContent += loadingText[index];
                    index++;
                    if (index === loadingText.length) {
                        clearInterval(animationInterval);
                        // Reinicia la animación después de un breve retraso
                        setTimeout(function () {
                            loadingElement.textContent = "";
                            index = 0;
                            animateLoadingText();
                        }, 1000);
                    }
                }, 100);
            }

            // Inicia la animación cuando se muestra el overlay
            animateLoadingText();

            // Realiza la solicitud AJAX después de iniciar la animación
            $.ajax({
                url: "@Url.Action("GetAll","Pokedex")",
                type: "GET",
                success: function (data) {
                    // Ocultar la pantalla de carga una vez que la solicitud se complete con éxito
                    $("#overlay").hide();
                    // Redirige a la nueva página
                    window.location.href = "/Pokedex/GetAll"; // Cambia esto a la URL de la nueva página
                },
                error: function (error) {
                    // Manejar errores si es necesario
                    console.error("Error en la solicitud AJAX: ", error);
                    // Ocultar la pantalla de carga en caso de error
                    $("#overlay").hide();
                }
            });
        });
    });

</script>

